{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "target":"es2015",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "declaration": true
}