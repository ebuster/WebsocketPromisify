{
  "author": {
    "name": "Michael Akiliev"
  },
  "bugs": {
    "url": "https://github.com/houd1ni/WebsocketPromisify/issues"
  },
  "bundleDependencies": false,
  "deprecated": false,
  "description": "Wraps your WebSockets into Promise-based class with full d.ts typings on client & server",
  "homepage": "https://github.com/houd1ni/WebsocketPromisify#readme",
  "keywords": [
    "WebSockets",
    "WS",
    "Promise",
    "Socket",
    "REST",
    "Ajax",
    "Easy",
    "realtime",
    "Middleware",
    "JSON",
    "Data",
    "transport",
    "API",
    "async"
  ],
  "license": "MIT",
  "main": "dist/ws.js",
  "module": "dist/ws.esm.js",
  "name": "wspromisify",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/houd1ni/WebsocketPromisify.git"
  },
  "scripts": {
    "lint": "tslint 'src/**/*.ts'",
    "test": "npm run prod:cjs && ava",
    "test:lazy": "ava",
    "dev": "rollup --watch -c",
    "prod:cjs": "cross-env BUILD=cjs rollup -c",
    "prod:es": "cross-env BUILD=es rollup -c",
    "prod": "npm run prod:es && npm run prod:cjs"
  },
  "version": "2.1.5",
  "ava": {
    "files": [
      "./test/specs/*.ts"
    ],
    "serial": true,
    "failFast": true,
    "timeout": "2m",
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/node": "^10.12.24",
    "@types/ramda": "^0.25.48",
    "@types/ws": "^6.0.1",
    "ava": "^1.2.1",
    "axios": "^0.18.0",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "nyc": "^13.2.0",
    "ramda": "^0.26.1",
    "randomatic": "^3.1.1",
    "rollup": "^1.1.2",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-resolve-aliases": "^0.2.0",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "uglify-es": "^3.3.9",
    "ws": "^6.1.3"
  },
  "types": "./dist/src/WS.d.ts"
}
